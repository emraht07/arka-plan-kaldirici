import streamlit as st
from PIL import Image
from rembg import remove

st.title("Arka Plan Kaldırıcı")

uploaded_file = st.file_uploader("Resim Yükle", type=["png", "jpg", "jpeg"])
if uploaded_file:
    input_image = Image.open(uploaded_file)
    st.image(input_image, caption="Orijinal Resim", use_column_width=True)

    if st.button("Arka Planı Kaldır"):
        output_image = remove(input_image)
        st.image(output_image, caption="Arka Planı Kaldırılmış", use_column_width=True)
        st.download_button("İndir", output_image.tobytes(), file_name="temizlenmis.png")
